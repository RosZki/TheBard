<div class="middleform vtrack">
<div id="header">
		The Bard
		<img src=<%= image_path("logo.png")%> id="logo"></img>
</div>
<div>
User: <%= session[:name] %>
<c class="bt">
Playlist Name: <%= Playlist.find(session[:playlist_id]).name %> <br> </div>
</c>
<br>
Tracks 
<%= link_to "+", new_track_path %> :
<table>
<% @tracks.each_with_index do |track, index| %>
    <tr>
		<td><%= index+1 %> - </td>
		<td><%= track.display_name %></td>
		<td><%= button_to "Delete",  track, method: :delete, confirm: "Are you sure that you wish to delete #{File.basename(track.display_name)}?" %></td>
		<td><%= button_to "Move Up", {:controller => "tracks", :action => "move_up", :id => track.id} %></td>
		<td><%= button_to "Move Down", {:controller => "tracks", :action => "move_down", :id => track.id} %></td>
    </tr>
<% end %>
</table>
<br>
<a href="/playlists">Back</a>
</div>